---
// src/components/ProjectsSection.astro
import ProjectCard from "./ProjectCard.astro";

const projects = [
  // ... (tus datos de proyecto sin cambios) ...
  {
    title: "Chat Ventas AI (WhatsApp + OpenAI)",
    description:
      "Asistente de ventas inteligente integrado con WhatsApp y potenciado por OpenAI para responder consultas y facilitar ventas.",
    imgSrc: "leadlink.webp", // Asegúrate que esta imagen está en /public/images/
    imgAlt: "Preview del Chatbot de Ventas AI",
    tech: [
      "React",
      "Node.js",
      "Laravel",
      "Sqlite",
      "OpenAI API",
      "WhatsApp API",
      "Tailwind CSS",
    ],
    repoUrl: "#",
  },
  {
    title: "Dashboard Analítico (Shopify + GA4)",
    description:
      "Plataforma de visualización de datos que unifica métricas clave de Shopify y Google Analytics 4 para e-commerce.",
    imgSrc: "shopify.webp", // Asegúrate que esta imagen está en /public/images/
    imgAlt: "Preview del Dashboard Analítico",
    tech: [
      "Next.js",
      "React",
      "Chart.js",
      "PostgreSQL",
      "Shopify API",
      "GA4 API",
      "Tailwind CSS",
    ],
    repoUrl: "https://github.com/BorjaMtn/shopify-analytics-frontend",
  },
  {
    title: "App Gestión PyMEs (Reuniones y Tareas)",
    description:
      "Aplicación web para pequeñas y medianas empresas que facilita la organización de reuniones, seguimiento de tareas y colaboración.",
    imgSrc: "synkmeet.webp", // Asegúrate que esta imagen está en /public/images/
    imgAlt: "Preview de la Aplicación de Gestión para PyMEs",
    tech: [
      "Laravel",
      "Next.js",
      "React",
      "TypeScript",
      "PostgreSQL",
      "API RESTful",
      "Tailwind CSS",
    ],
    repoUrl: "#",
  },
];
---

<section id="proyectos" class="py-20 md:py-28 bg-brand-dark overflow-hidden">
  {/* Añadido overflow-hidden para evitar barras de scroll por animaciones */}
  <div class="container mx-auto px-6 lg:px-8">
    {/* Título con animación AOS */}
    <h2
      class="text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-16 text-brand-light"
      data-aos="fade-up"
    >
      {/* Animación para el título */}
      Proyectos <span class="text-brand-accent">Destacados</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {/* Tarjetas con animación AOS escalonada */}
      {
        projects.map((project, index) => (
          <div data-aos="fade-up" data-aos-delay={index * 100}>
            {" "}
            {/* Animación y retraso escalonado */}
            <ProjectCard project={project} />
          </div>
        ))
      }
    </div>
  </div>
  {/* Indicador "Scroll Down" Animado */}
  <div
    class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-20 hidden md:block animate-fade-in animation-delay-1000"
  >
    <a
      href="#proyectos"
      aria-label="Ir a proyectos"
      class="text-brand-light-secondary hover:text-brand-accent transition-colors"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8 animate-bounce"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
