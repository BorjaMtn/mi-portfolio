<section
  id="hero"
  class="relative overflow-hidden bg-brand-dark py-28 md:py-40 min-h-screen flex items-center"
>
  {/* Asegura altura mínima y centra verticalmente */}

  {/* Elementos Decorativos Animados de Fondo (Sutiles) */}
  <div class="absolute inset-0 opacity-20 -z-10">
    {/* Opacidad general baja */}
    {/* Forma 1 */}
    <div
      class="absolute top-1/4 left-1/4 w-72 h-72 md:w-96 md:h-96 bg-brand-accent rounded-full mix-blend-screen filter blur-3xl animate-blob animation-delay-2000"
    >
    </div>
    {/* Forma 2 */}
    <div
      class="absolute bottom-1/4 right-1/4 w-72 h-72 md:w-96 md:h-96 bg-cyan-400 rounded-full mix-blend-screen filter blur-3xl animate-blob animation-delay-4000"
    >
    </div>
    {/* Forma 3 (Opcional) */}
    <div
      class="absolute bottom-1/2 left-1/3 w-60 h-60 md:w-80 md:h-80 bg-sky-400 rounded-full mix-blend-screen filter blur-3xl animate-blob"
    >
    </div>
  </div>

  <div class="container mx-auto px-6 lg:px-8 max-w-5xl relative z-10">
    <div class="text-center md:text-left">
      {/* Título Principal con Nombre Animado y Revelado */}
      <h1
        class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-brand-light mb-6 leading-tight animate-fade-in-up"
      >
        Hola, soy{" "}
        {/* Nombre con gradiente animado */}
        <span class="inline-block relative">
          <span
            class="absolute -inset-0.5 bg-gradient-to-r from-brand-accent via-cyan-400 to-sky-500 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 animate-tilt"
          ></span>
          <span
            class="relative py-1 px-2 bg-brand-dark rounded-lg leading-none"
          >
            <span
              class="animate-gradient-text bg-gradient-to-r from-brand-accent via-cyan-300 to-sky-400 bg-clip-text text-transparent"
            >
              Borja Montaño
            </span>
          </span>
        </span>.
        <br />
        Desarrollador Web <span class="block md:inline">Full Stack.</span>
      </h1>

      {/* Párrafo con Revelado */}
      <p
        class="text-lg md:text-xl text-brand-light-secondary mb-10 max-w-3xl mx-auto md:mx-0 animate-fade-in-up animation-delay-300"
      >
        Transformo ideas en soluciones web interactivas, eficientes y <span
          class="text-brand-light font-medium">visualmente impactantes</span
        > con React, Next.js, Laravel, APIs y Astro.
      </p>

      {/* Botones con Revelado y Hover Mejorado */}
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start animate-fade-in-up animation-delay-600"
      >
        <a
          href="#proyectos"
          class="bg-brand-accent hover:bg-brand-accent-hover text-brand-dark font-bold py-3 px-8 rounded-lg transition-all duration-300 ease-in-out text-center shadow-lg hover:shadow-glow-accent-sm transform hover:scale-105"
        >
          {/* Efecto scale en hover */}
          Ver Proyectos
        </a>

        <a
          href="#contacto"
          class="border-2 border-brand-dark-tertiary hover:border-brand-light text-brand-light font-medium py-3 px-8 rounded-lg transition-all duration-300 ease-in-out text-center transform hover:scale-105"
        >
          {/* Efecto scale en hover */}
          Contactar
        </a>
        <a
          href="/cv/cv.pdf"
          class="bg-brand-dark-secondary hover:bg-brand-accent text-brand-light font-bold py-3 px-8 rounded-lg transition-all duration-300 ease-in-out text-center shadow-md hover:shadow-lg transform hover:scale-105 border-2 border-brand-dark-tertiary hover:border-brand-accent"
          download="CV_Borja_Montano.pdf"
        >
          Descargar CV
        </a>
      </div>
    </div>
  </div>

  {/* Indicador "Scroll Down" Animado */}
  <div
    class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-20 hidden md:block animate-fade-in animation-delay-1000"
  >
    <a
      href="#proyectos"
      aria-label="Ir a proyectos"
      class="text-brand-light-secondary hover:text-brand-accent transition-colors"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8 animate-bounce"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

{/* Estilos para las animaciones */}
<style>
  @keyframes gradient-text {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-gradient-text {
    background-size: 200% auto; /* Tamaño del gradiente para animación */
    animation: gradient-text 5s linear infinite;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    /* Aplica animación de entrada */
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0; /* Empieza invisible */
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
    opacity: 0;
  }

  /* Animación para las formas de fondo */
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 15s infinite ease-in-out; /* Duración larga y suave */
  }

  /* Animación para el brillo del nombre */
  @keyframes tilt {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(1deg);
    }
  }
  .animate-tilt {
    animation: tilt 10s infinite linear alternate;
  }

  /* Clases de utilidad para retrasos (Tailwind no las tiene por defecto) */
  .animation-delay-300 {
    animation-delay: 0.3s;
  }
  .animation-delay-600 {
    animation-delay: 0.6s;
  }
  .animation-delay-1000 {
    animation-delay: 1s;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
